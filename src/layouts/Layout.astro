---
import "../styles/global.css";
import Header from '../components/Header.astro';
import adl_logo from "../assets/adl_small_logo.png";
import Footer from "../components/Footer.astro";

// On dÃ©finit des props optionnelles pour le layout
const {
    title = "Antre des Loutres",
    ogImage ="https://antredesloutres.fr/_astro/adl_small_logo.D-nH0BMB.png",
    ogTitle = "Antre des Loutres",
    ogDescription = "Bienvenue dans l'Antre des loutres ðŸ¦¦ â€” un lieu de partage, d'amitiÃ© et de bonne humeur !"
} = Astro.props;
---
<!doctype html>
<html lang="fr">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/png" href={adl_logo.src} />
	<meta name="generator" content={Astro.generator} />
    <meta content="https://antredesloutres.fr" property="og:url" />
    <link rel="sitemap" href="/sitemap-index.xml"/>
    <meta content="#7a3716" data-react-helmet="true" name="theme-color" />

    <!-- Titre de la page -->
    <title>{title}</title>

    <!-- OG:image dynamique -->
    <meta content={ogTitle} property="og:title" />
    <meta content={ogImage} property="og:image" />
    <meta content={ogDescription} property="og:description" />

</head>
<body class="flex flex-col min-h-screen overflow-x-hidden bg-white">
	<Header />
		<main class="flex-grow">
			<slot />
		</main>
	<Footer />
</body>
</html>
