---
<!-- CSS -->
<style>
    .serveur-screen {
        display: grid;
        gap: 1rem;
        padding: 1rem;
    }

    .screen-item {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .screen-item img {
        width: 100%;
        height: auto;
        object-fit: cover;
        border-radius: 0.5rem;
        transition: transform 0.2s ease;
    }

    .author {
        margin-top: 0.5rem;
        font-size: 0.875rem;
        color: #555;
        font-style: italic;
    }

</style>

<!-- Contenu de la page -->
<div class="serveur-screen">
    {screenList.map((screen) => (
            <div class="screen-item">
                <img src={screen.image_url} alt={screen.name}/>
                <p class="author">Par : {screen.authors || "Inconnu"}</p>
            </div>
    ))}
</div>
