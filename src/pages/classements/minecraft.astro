---
// page minecraft.astro
import Layout from "../../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import Title from "../../assets/titles/classement-joueurs.png"
import Banner from "../../components/Banner.astro";
import PlayerClassement from "../../components/classements/PlayerClassement.astro"
---

<Layout>
    <Banner  bannerUrl=`/banner/minecraft/la_vanilla.webp`/>
    <div class="page-title">
        <Image src={Title} alt="Titre" />
    </div>
    <div class="classement-container">
        <PlayerClassement jeu="minecraft" />
    </div>
</Layout>

<style>
    .page-title {
        margin-top: 50px;
        margin-bottom: 50px;
        align-items: center;
        display: flex;
        flex-direction: column;
    }
    @media (max-width: 768px) {
        .page-title {
            margin-top: 15px;
            margin-bottom: 15px;
        }
    }
</style>